<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 轮播图 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp" >

        <!-- viewpage新闻图片轮播 -->
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_item_news_center_pages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </android.support.v4.view.ViewPager>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#33000000"
            android:gravity="center_vertical" >

            <!-- 图片描述信息 -->
            <TextView
                android:id="@+id/tv_item_news_center_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:text="图片一的描述信息" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" 
                android:layout_alignParentRight="true"
                >
				<!-- 点的信息数据 -->
                <View
                    
                    android:id="@+id/view_item_news_center_dots"
                    android:layout_marginRight="10dp"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/dot_focus" 
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- listView显示新闻信息 -->
    <ListView 
        
        android:id="@+id/lv_item_news_center_mess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
    </ListView>
    

</LinearLayout>